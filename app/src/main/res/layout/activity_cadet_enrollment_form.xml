<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:background="@color/white"
    tools:context=".activities.CadetEnrollmentFormActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:weightSum="1.0"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/red"
                android:layout_weight=".1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:weightSum="1.0">

                    <ImageView
                        style="@style/HorizontalWeight"
                        android:layout_weight=".2"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/frg_title"
                        style="@style/HorizontalWeight"
                        android:layout_weight=".68"
                        android:gravity="center"
                        android:text="Enrollment Form"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/physical_iv"
                        style="@style/HorizontalWeight"
                        android:layout_weight=".12"
                        android:padding="@dimen/_3sdp"
                        android:onClick="sendPhysicalMail"
                        app:srcCompat="@drawable/ic_email_white_24dp" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                app:pstsTextAllCaps="true"
                android:textColor="@android:color/white"
                android:background="@color/red"
                android:visibility="gone"
                app:pstsIndicatorColor="@color/theme_color"
                android:layout_height="@dimen/_40sdp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_weight=".8"
                android:layout_below="@+id/tabs">
            </android.support.v4.view.ViewPager>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".8"
                android:background="@color/green">

            <include layout="@layout/show_enrollment_form1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/form1"
                android:background="@color/white"
                android:visibility="visible"/>

            <include layout="@layout/show_enrollment_form2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/form2"
                android:background="@color/white" />

            <include layout="@layout/show_enrollment_form3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/form3"
                android:background="@color/white" />

            <include layout="@layout/show_enrollment_form4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/form4"
                android:background="@color/white" />

                <include
                    android:id="@+id/doc1"
                    layout="@layout/show_enrollment_form_card"/>

                <include
                    android:id="@+id/doc2"
                    layout="@layout/show_enrollment_form_card"/>

                <include
                    android:id="@+id/doc3"
                    layout="@layout/show_enrollment_form_card"/>

                <include
                    android:id="@+id/doc4"
                    layout="@layout/show_enrollment_form_card"/>

                <include
                    android:id="@+id/doc5"
                    layout="@layout/show_enrollment_form_card"/>

                <include
                    android:id="@+id/doc6"
                    layout="@layout/show_enrollment_form_card"/>

                <include
                    android:id="@+id/doc7"
                    layout="@layout/show_enrollment_form_card"/>

                <include
                    android:id="@+id/doc8"
                    layout="@layout/show_enrollment_form_card"/>

                <include
                    android:id="@+id/doc9"
                    layout="@layout/show_enrollment_form_card"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
