<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/red"
        android:gravity="center"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:weightSum="1.0">

            <ImageView
               style="@style/HorizontalWeight"
                android:src="@drawable/logo"
                android:padding="@dimen/_8sdp"
                android:layout_weight=".2"/>

        <TextView
            android:id="@+id/frg_title"
            style="@style/HorizontalWeight"
            android:layout_weight=".7"
            android:gravity="center"
            android:text="NCC Dte - PUNJAB"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/button1"
                style="@style/HorizontalWeight"
                android:src="@drawable/three_dots"
                android:padding="@dimen/_3sdp"
                android:layout_weight=".1"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:clipToPadding="false"
android:gravity="center"
android:orientation="horizontal">

<LinearLayout
    android:layout_width="@dimen/_340sdp"
    android:layout_height="@dimen/_150sdp"
    android:layout_gravity="bottom"
    android:layout_margin="@dimen/_5sdp"
    android:clickable="true"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:alpha=".9"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ncc_a1">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:weightSum="3"
            android:gravity="right"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_minus35sdp">

            <TextView
                style="@style/HorizontalWeight"
                android:id="@+id/profile_tv"
                android:background="@drawable/rounded_corner_button"
                android:gravity="center"
                android:onClick="goProfile"
                android:text="View Profile"
                android:visibility="gone"
                android:layout_weight="1.5"
                android:textSize="@dimen/_12ssp"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />

            <TextView
                style="@style/HorizontalWeight"
                android:id="@+id/reg_tv"
                android:background="@drawable/rounded_corner_button"
                android:gravity="center"
                android:onClick="goReg"
                android:layout_weight="1.5"
                android:visibility="gone"
                android:maxLines="2"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:text="@string/register_for_ncc"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />

            <TextView
                style="@style/HorizontalWeight"
                android:background="@drawable/rounded_corner_button"
                android:gravity="center"
                android:id="@+id/lacture_tv"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1.5"
                android:layout_gravity="right"
                android:onClick="goTodayLacture"
                android:visibility="gone"
                android:textSize="@dimen/_12ssp"
                android:text="@string/today_s_lecture"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>

<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/HomeTextViewTheam"
        android:text="Study Material"
        android:visibility="gone"
        android:onClick="goToStudyMatrial"
        android:id="@+id/study_material"/>

    <LinearLayout
        style="@style/HomeLinearLayoutTheam"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_212sdp"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/HomeImageViewTheam"
                android:layout_height="@dimen/_120sdp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:background="@drawable/ncc_a3" />

            <View style="@style/HomeView" />

            <TextView
                style="@style/HomeTextViewTheam"
                android:text="@string/phhp_amp_c_champion_ncc_dte"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/HomeLinearLayoutTheam"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/HomeImageViewTheam"
                    android:background="@drawable/punjab_directrate" />

                <View style="@style/HomeView" />

                <TextView
                    style="@style/HomeTextViewTheam"
                    android:text="Dte Corner" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/HomeLinearLayoutTheam"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/HomeImageViewTheam"
                    android:background="@drawable/ncc_group_hq"/>

                <View
                    style="@style/HomeView"
                    android:background="@color/theme_color" />

                <TextView
                    style="@style/HomeTextViewTheam"
                    android:text="Gp HQ Corner" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/HomeLinearLayoutTheam"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="goUnitCorner"
                android:orientation="vertical">

                <ImageView
                    style="@style/HomeImageViewTheam"
                    android:background="@drawable/ncc_a2" />

                <View style="@style/HomeView" />

                <TextView
                    style="@style/HomeTextViewTheam"
                    android:text="Unit Corner" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/HomeLinearLayoutTheam"
            android:clickable="true"
            android:onClick="goInstitutional">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="goInstitutional"
                android:orientation="vertical">

                <ImageView
                    style="@style/HomeImageViewTheam"
                    android:background="@drawable/ncc_school" />

                <View style="@style/HomeView" />

                <TextView
                    style="@style/HomeTextViewTheam"
                    android:text="Institutions" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/HomeLinearLayoutTheam"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="goDownload"
                android:orientation="vertical">

                <ImageView
                    style="@style/HomeImageViewTheam"
                    android:src="@drawable/ncc_download" />

                <View style="@style/HomeView" />

                <TextView
                    style="@style/HomeTextViewTheam"
                    android:text="@string/download" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/HomeLinearLayoutTheam"
            android:clickable="true"
            android:onClick="goInstitutional">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                tools:onClick="goAboutNcc">

                <ImageView
                    style="@style/HomeImageViewTheam"
                    android:onClick="goAboutNcc"
                    android:src="@drawable/ncc_faq" />

                <View style="@style/HomeView" />

                <TextView
                    style="@style/HomeTextViewTheam"
                    android:text="@string/about_ncc" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView></LinearLayout>
