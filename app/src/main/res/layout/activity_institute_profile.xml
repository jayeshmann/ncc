<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".activities.InstituteProfileActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/red"
                android:gravity="center"
                android:text="Institute Profile Informations"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                style="@style/TextViewStyle2"
                android:editable="false"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="5dp"
                android:text="Institute:-"
                android:textAlignment="gravity"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/institute_tv"
                style="@style/TextViewStyle1"
                android:gravity="center_vertical"
                android:text="Name" />


            <TextView
                android:id="@+id/school_tv"
                style="@style/TextViewStyle2"
                android:editable="false"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="5dp"
                android:text="Name:-"
                android:textAlignment="gravity"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/name_tv"
                style="@style/TextViewStyle1"
                android:gravity="center_vertical"
                android:text="Name" />

            <TextView
                style="@style/TextViewStyle2"
                android:editable="false"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="5dp"
                android:text="Email:-"
                android:textAlignment="gravity"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/email_tv"
                style="@style/TextViewStyle1"
                android:gravity="center_vertical"
                android:text="Name" />

            <TextView
                style="@style/TextViewStyle2"
                android:editable="false"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="5dp"
                android:text="Mobile:-"
                android:textAlignment="gravity"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/mobile_tv"
                style="@style/TextViewStyle1"
                android:gravity="center_vertical"
                android:text="Name" />

            <TextView
                style="@style/TextViewStyle2"
                android:editable="false"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="5dp"
                android:text="Aadhaar:-"
                android:textAlignment="gravity"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/aadhar_tv"
                style="@style/TextViewStyle1"
                android:gravity="center_vertical"
                android:text="Name" />

            <TextView
                style="@style/TextViewStyle2"
                android:editable="false"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="5dp"
                android:text="Registration No:-"
                android:textAlignment="gravity"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/reg_tv"
                style="@style/TextViewStyle1"
                android:gravity="center_vertical"
                android:text="Name" />


            <TextView
                android:id="@+id/ifsc_tv"
                style="@style/TextViewStyle1"
                android:gravity="center_vertical"/>

        </LinearLayout>
    </ScrollView>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/pdf_feb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_save"/>

</FrameLayout>

