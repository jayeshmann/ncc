<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="#B2EBF2"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_root"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="Paris"
            android:id="@+id/title"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/Vilate"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/des"
            tools:text="Paris is the capital of france HI DEAr How Are You Paris is the capital of france HI DEAr How Are You Paris is the capital of france HI DEAr How Are You"
            android:fontFamily="sans-serif"
            android:textColor="@color/gray"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="View More"
            android:background="#1A237E"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:id="@+id/delete"
                android:padding="@dimen/_2sdp"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/date"/>

            <TextView
                android:id="@+id/date"
                android:text="08-03-2018"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:fontFamily="sans-serif"
                android:textColor="@color/Vilate"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
